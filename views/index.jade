extends layout

block content
	div(class="container")
		div(class="row")
			div(class="col-md-8")
				h1= title
		div(class="row move-down")
			div(class="col-md-8")
				a(href="/cat", class="btn btn-primary", role="button")
					span(class="glyphicon glyphicon-list")
					|  Kategorijos
				| 
				a(href="/note/new", class="btn btn-primary", role="button")
					span(class="glyphicon glyphicon-plus")
					|  Naujas užrašas
		div(class="row move-down")
			div(class="col-md-8")
				table(class="table table-striped table-hover")
					thead
						tr
							th Pavadinimas                                
							th Kategorija
							th 
							th(class="text-right") Veiksmai
					tbody
						-each note in data
							include note_row